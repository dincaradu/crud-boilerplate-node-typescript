{
  "name": "crud-boilerplate",
  "version": "1.0.0",
  "description": "This a CRUD boilerplate written in Typescript with Node.js, Express, Sequelize, MySQL.",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-assets",
    "build:prod": "set NODE_ENV=production && npm run build",
    "dev:start": "npm-run-all build start",
    "dev": "set NODE_ENV=development && nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dincaradu/crud-boilerplate-node-js-express-sequelize.git"
  },
  "keywords": [
    "Node.js",
    "CRUD",
    "boilerplate",
    "Express",
    "Sequelize",
    "MySQL",
    "Authentication",
    "JWT"
  ],
  "author": "Radu DincÄƒ",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dincaradu/crud-boilerplate-node-js-express-sequelize/issues"
  },
  "homepage": "https://github.com/dincaradu/crud-boilerplate-node-js-express-sequelize#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "jsonwebtoken": "^8.5.1",
    "jsonwebtoken-refresh": "^5.7.0",
    "lusca": "^1.7.0",
    "mysql": "^2.18.1",
    "passport": "^0.5.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41",
    "typeorm-store": "^2.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/chalk": "^2.2.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^9.0.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lusca": "^1.7.1",
    "@types/mysql": "^2.15.20",
    "@types/node": "^14.18.3",
    "@types/passport": "^1.0.7",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-local": "^1.0.34",
    "@types/shelljs": "^0.8.10",
    "@types/validator": "^13.7.1",
    "fs-extra": "^10.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4"
  }
